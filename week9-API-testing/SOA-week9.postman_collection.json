		{
			"name": "etag get book by id",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200 or 304\", () => {\r",
							"  pm.expect([200, 304]).to.include(pm.response.code);\r",
							"});\r",
							"\r",
							"if (pm.response.code === 304) {\r",
							"  pm.test(\"304 has empty/small body\", () => {\r",
							"    const text = pm.response.text() || \"\";\r",
							"    pm.expect(text.length).to.be.below(10);\r",
							"  });\r",
							"  pm.test(\"304 carries ETag & Cache-Control\", () => {\r",
							"    pm.expect(pm.response.headers.get(\"ETag\")).to.be.a(\"string\").and.not.empty;\r",
							"    pm.expect(pm.response.headers.get(\"Cache-Control\")).to.match(/max-age=\\d+/);\r",
							"  });\r",
							"}\r",
							"\r",
							"if (pm.response.code === 200) {\r",
							"  pm.test(\"200 implies content changed (ETag rotated)\", () => {\r",
							"    const prev = pm.environment.get(\"book_etag\");\r",
							"    const curr = pm.response.headers.get(\"ETag\");\r",
							"    pm.expect(curr, \"Missing ETag on 200\").to.be.a(\"string\").and.not.empty;\r",
							"    if (prev) pm.expect(curr).to.not.eql(prev);\r",
							"  });\r",
							"  // refresh saved ETag for next runs\r",
							"  const curr = pm.response.headers.get(\"ETag\");\r",
							"  if (curr) pm.environment.set(\"book_etag\", curr);\r",
							"}\r",
							"\r",
							"pm.test(\"Response time under 500ms\", () => {\r",
							"  pm.expect(pm.response.responseTime).to.be.below(500);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
